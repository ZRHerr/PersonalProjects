@model PersonalSite.Models.Contact
<!-- Contact Section
================================================== -->
<section id="contact">
    <div class="row section-head">
        <div class="two columns header-col">
            <h1><span>Connect</span></h1>
        </div>
        <div class="ten columns">
            <p class="lead">
                If you want to connect with me find me on social media. Ask me anything or lets work on something together!
            </p>
        </div>
    </div>
    <div class="row">
        <div class="eight columns">
            <!-- form -->
            <form method="post" id="contactForm" name="contactForm">
                <fieldset>
                    <div>
                        <label asp-for="Name">Name <span class="required">*</span></label>
                        <input asp-for="Name"  size="35" id="contactName">
                    </div>
                    <div>
                        <label asp-for="Email">Email <span class="required">*</span></label>
                        <input asp-for="Email"  size="35" id="contactEmail">
                    </div>
                    <div>
                        <label asp-for="Subject">Subject</label>
                        <input asp-for="Subject"  size="35" id="contactSubject">
                    </div>
                    <div>
                        <label asp-for="Message">Message <span class="required">*</span></label>
                        <input  asp-for="Message" cols="50" rows="15" id="contactMessage"></input>
                    </div>
                    <div>
                        <input asp-action="Contact" type="submit"  value="Submit" class="submit" />
                        <span id="image-loader">
                            <img alt="" src="images/loader.gif">
                        </span>
                    </div>
                </fieldset>
            </form> <!-- Form End -->
            <!-- contact-warning -->
            <div id="message-warning"> Error </div>
            <!-- contact-success -->
            <div id="message-success">
                <i class="fa fa-check"></i>Your message was sent, thank you!<br>
            </div>
        </div>

        <aside class="four columns footer-widgets">
            <div class="widget widget_contact">
                <h4>Address and Phone</h4>
                <p class="address">
                    <span>Zachary R. Herrera</span><br>
